<div>
  <h1>Agenda Blox</h1>

  <%= month_calendar(events: @meetings, attribute: :date) do |date, meetings| %>
    <%= date.day %>

    <% meetings.each do |meeting| %>
      <div>
      <%= link_to "#{meeting.title} as #{meeting.start_time.strftime("%k:%M")}", meeting_path(meeting.id) %>
      </div>
    <% end %>
  <% end %>
</div>